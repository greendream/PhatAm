<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/video_list_image"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" />

    <!-- Title of Video -->

    <TextView
        android:id="@+id/video_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/video_list_image"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Xã hội công bằng"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Astist Name -->

    <TextView
        android:id="@+id/video_list_astist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_list_title"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/video_list_image"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Thích Chân Quang"
        android:textColor="@color/blue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/video_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_list_astist"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/video_list_image"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="1000 lượt xem"
        android:textColor="#989393"
        android:textSize="12sp" />

</RelativeLayout>