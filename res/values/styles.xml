<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Theme.PhatAmActionBar" parent="Theme.Sherlock.Light">
    	<item name="actionBarStyle">@style/Widget.PhatAmTheme.ActionBar</item>
    </style>
    
    
	<style name="Widget.PhatAmTheme.ActionBar" parent="Widget.Sherlock.ActionBar">
    	<item name="android:background">@color/blue</item>
    	<item name="background">@color/blue</item>
	</style>

    <style name="AnimationPopup">
        <item name="@android:windowEnterAnimation">@animator/appear</item>
        <item name="@android:windowExitAnimation">@animator/disappear</item>
    </style>

    <bool name="default_circle_indicator_centered">true</bool>
    <color name="default_circle_indicator_fill_color">#FFF</color>
    <color name="default_circle_indicator_page_color">#FF4bc1d2</color>
    <integer name="default_circle_indicator_orientation">0</integer>
    <dimen name="default_circle_indicator_radius">4dp</dimen>
    <bool name="default_circle_indicator_snap">false</bool>
    <color name="default_circle_indicator_stroke_color">#FF4bc1d2</color>
    <dimen name="default_circle_indicator_stroke_width">1dp</dimen>
    
</resources>